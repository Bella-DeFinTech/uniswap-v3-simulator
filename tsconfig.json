{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "declaration": true,
    "rootDirs": ["./src"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowJs": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./src"]
}
